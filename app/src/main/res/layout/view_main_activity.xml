<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:support="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">


  <org.fs.component.error.ErrorLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dip"
    support:errorLayout_src="@drawable/ic_launcher_background"
    support:errorLayout_title="@string/app_name"
    support:errorLayout_titleTextAppearance="@style/ErrorTitleApperance"
    support:errorLayout_subTitle="@string/app_name"
    support:errorLayout_subTitleTextAppearance="@style/ErrorSubTitleApperance" />

</FrameLayout>